<DOCTYPE ! html>
<head>
<head>
		<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<link rel="stylesheet" type="text/css" href="/css/artist.css" >
<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jque.ry/3.3.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<html>
<div class="container-fluid bg">
	<div class="row">
		<div class="col-md-4">
			<img src="/images/arijit.jpg" class="img-thumbnail" alt="Arijit" width="80%" height="80%">
		</div>
		<div class="col-md-8 details">
			<p>You are listening to :<p>
			<h1 class="display-1">Best of <%=title%><h1>
		</div>
		 <div class="col-md-2 sort" >
		 	<form action="/artist/sort " method="get" >
		 		<select name="sort">
		 			<option value="popularity">Popularity</option>
		 			<option value="year">Year</option>

		 		</select>
		 		<input type="submit" value="submit">
		 	</form>	
		 </div>
	</div>
	<div class="row">
		 <table class="table table-dark table-stripped tab">
		 	<thead>
		 	<tr>
		 		<th>#</th>
		 		<th>Song Title</th>
		 		<th>Year</th>
		 		<th>Duration(min)</th>
		 	<tr>
		 	</thead>
		 	<tbody>
		 	<% if(data.length){%>
		 	<%for(var i=0;i<data.length;i++){%>

		 	  <tr>
		 		<td><%=(i+1)%></td>
		 		<td><%=data[i].song_name%></td>
		 		<td><%=data[i].year%></td>
		 		<td><%=data[i].duration%></td>
		 	  </tr>
		 	  <%} 
		 	  }else{%>
		 	   <tr>
		 		<td>No</td>
		 		<td>No</td>
		 		<td>No</td>
		 		<td>No</td>
		 		<%}%>
		 	  </tr>
		 	</tbody>
         </table>

	</div>
</div>
</html>